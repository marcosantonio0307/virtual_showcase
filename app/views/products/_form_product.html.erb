<div class="col-lg-12 col-md-12 col-sm-12 container-form">
	<%= form_for @product do |f| %>
		<%= f.hidden_field :user_id, value: current_user.id %>
		<div class="form-group">
			<%= f.label :nome %>
			<%= f.text_field :name, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :descricao %>
			<%= f.text_field :description, class: 'form-control' %>
		</div>
		<div class="form-group">
			<%= f.label :preco %>
			<%= f.text_field :price, class: 'form-control' %>
		</div>
		<div class="form-group" style="background: #F6CED8; border-radius: 0.5em;">
			<%= f.label :categoria %> <br>
			<%= f.select :category_id, @categories, class: 'form-control' %>
			<span>Selecione a Categoria!</span>
		</div>
		<div class="form-group">
			<%= f.label :ativo? %> <br>
			<%= f.select :active, ['sim', 'nÃ£o'], class: 'form-control' %>
		</div>
		<div>
			<%= f.label :imagem %>
			<%= f.file_field :photo %> <br>
		</div>
		<div class="form-group">
			<%= f.submit :salvar, class: 'btn btn-success' %>
		</div>
	<% end %>
</div>