<div class="col-lg-12 col-md-12 col-sm-12">
	<h3><%= @product.name %></h3>
	<span class="options">
		<%= link_to root_path do %>
			<i class="fa fa-arrow-left"></i>
		<% end %>
		<%= link_to edit_product_path(@product) do %>
			<i class="fa fa-pencil"></i>
		<% end %>
		<%= link_to product_path(@product), method: :delete, data:{confirm: 'Excluir esse produto?'} do %>
			<i class="fa fa-trash"></i>
		<% end %>
	</span>
</div>

<div class="col-lg-12 col-md-12 col-sm-12 container-form">
	<%= form_for @product do |f| %>
		<div class="form-group">
			<%= f.label :nome %>
			<%= f.text_field :name, class: 'form-control', disabled: true %>
		</div>
		<div class="form-group">
			<%= f.label :descricao %>
			<%= f.text_field :description, class: 'form-control', disabled: true %>
		</div>
		<div class="form-group">
			<%= f.label :preco %>
			<%= f.text_field :price, class: 'form-control', disabled: true %>
		</div>
		<div class="form-group">
			<%= f.label :categoria %> <br>
			<%= text_field_tag :category, @product.category.name, class: 'form-control', disabled: true %>
		</div>
		<div class="form-group">
			<%= f.label :ativo? %> <br>
			<%= text_field_tag :active, @product.active, class: 'form-control', disabled: true %>
		</div>
		<div>
			<br><br>
			<% if @product.photo.attached? %>
				<%= image_tag @product.thumbnail %>
			<% end %>
		</div>
	<% end %>
</div>